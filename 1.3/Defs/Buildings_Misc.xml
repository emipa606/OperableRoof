<?xml version="1.0" encoding="utf-8"?>
<Defs>
  <ThingDef ParentName="BuildingBase">
    <defName>Operable_Roofa</defName>
    <label>Operable Roof</label>
    <description>Operable_Roof</description>
    <thingClass>Operable_Roof.Operable_Roof</thingClass>
    <graphicData>
      <texPath>Things/roofset</texPath>
      <graphicClass>Graphic_Single</graphicClass>
      <drawSize>(1,3)</drawSize>
    </graphicData>
    <statBases>
      <MaxHitPoints>300</MaxHitPoints>
      <WorkToBuild>135</WorkToBuild>
      <Flammability>1.0</Flammability>
      <MeditationFocusStrength>0.22</MeditationFocusStrength>
    </statBases>
    <rotatable>false</rotatable>
    <tickerType>Normal</tickerType>
    <costList>
      <Steel>500</Steel>
      <ComponentIndustrial>20</ComponentIndustrial>
    </costList>
    <leaveResourcesWhenKilled>false</leaveResourcesWhenKilled>
    <altitudeLayer>Building</altitudeLayer>
    <passability>Impassable</passability>
    <blockWind>true</blockWind>
    <castEdgeShadows>true</castEdgeShadows>
    <fillPercent>1</fillPercent>
    <coversFloor>true</coversFloor>
    <selectable>true</selectable>
    <neverMultiSelect>false</neverMultiSelect>
    <useStuffTerrainAffordance>true</useStuffTerrainAffordance>
    <terrainAffordanceNeeded>Heavy</terrainAffordanceNeeded>
    <!-- Best affordance needed for stone -->
    <holdsRoof>true</holdsRoof>
    <designationCategory>Structure</designationCategory>
    <staticSunShadowHeight>1.0</staticSunShadowHeight>
    <blockLight>true</blockLight>
    <interactionCellOffset>(0,0,0)</interactionCellOffset>
    <hasInteractionCell>true</hasInteractionCell>
    <canOverlapZones>false</canOverlapZones>
    <fertility>0</fertility>
    <size>(1,1)</size>
    <stuffCategories>
      <li>Metallic</li>
    </stuffCategories>
    <building>
      <isInert>true</isInert>
      <isPlaceOverableWall>true</isPlaceOverableWall>
      <ai_chillDestination>false</ai_chillDestination>
      <destroySound>BuildingDestroyed_Metal_Big</destroySound>
    </building>
    <comps>
      <li Class="CompProperties_Power">
        <compClass>CompPowerTrader</compClass>
        <shortCircuitInRain>true</shortCircuitInRain>
        <basePowerConsumption>200</basePowerConsumption>
      </li>
      <li Class="CompProperties_Flickable" />
      <li Class="CompProperties_Breakdownable" />
    </comps>
    <damageMultipliers>
      <li>
        <damageDef>Bomb</damageDef>
        <multiplier>2</multiplier>
      </li>
      <li>
        <damageDef>Thump</damageDef>
        <multiplier>2</multiplier>
      </li>
    </damageMultipliers>
    <researchPrerequisites>
      <li>MicroelectronicsBasics</li>
      <li>Fabrication</li>
    </researchPrerequisites>
    <placeWorkers>
      <li>PlaceWorker_PreventInteractionSpotOverlap</li>
    </placeWorkers>
    <designationHotKey>Misc3</designationHotKey>
  </ThingDef>
  <ThingDef ParentName="BuildingBase">
    <defName>Operable_Roof_Controller</defName>
    <label>Operable Roof Controller</label>
    <description>Operable_Roof</description>
    <thingClass>Operable_Roof.Operable_Roof_Controller</thingClass>
    <altitudeLayer>Building</altitudeLayer>
    <passability>PassThroughOnly</passability>
    <pathCost>50</pathCost>
    <statBases>
      <MaxHitPoints>300</MaxHitPoints>
      <WorkToBuild>5000</WorkToBuild>
      <Flammability>1.0</Flammability>
    </statBases>
    <size>(3,1)</size>
    <costList>
      <Steel>1000</Steel>
      <ComponentIndustrial>200</ComponentIndustrial>
      <ComponentSpacer>15</ComponentSpacer>
    </costList>
    <comps>
      <li Class="CompProperties_Power">
        <compClass>CompPowerTrader</compClass>
        <basePowerConsumption>250</basePowerConsumption>
        <shortCircuitInRain>true</shortCircuitInRain>
      </li>
      <li Class="CompProperties_Flickable" />
      <li Class="CompProperties_Breakdownable" />
    </comps>
    <stuffCategories>
      <li>Metallic</li>
    </stuffCategories>
    <graphicData>
      <texPath>Things/tablea</texPath>
      <graphicClass>Graphic_Single</graphicClass>
      <drawSize>(3,1)</drawSize>
      <damageData>
        <cornerTL>Damage/Corner</cornerTL>
        <cornerTR>Damage/Corner</cornerTR>
        <cornerBL>Damage/Corner</cornerBL>
        <cornerBR>Damage/Corner</cornerBR>
      </damageData>
    </graphicData>
    <castEdgeShadows>true</castEdgeShadows>
    <staticSunShadowHeight>0.20</staticSunShadowHeight>
    <fillPercent>0.5</fillPercent>
    <interactionCellOffset>(0,0,-1)</interactionCellOffset>
    <hasInteractionCell>true</hasInteractionCell>
    <terrainAffordanceNeeded>Heavy</terrainAffordanceNeeded>
    <designationCategory>Structure</designationCategory>
    <surfaceType>Item</surfaceType>
    <designationHotKey>Misc12</designationHotKey>
    <constructionSkillPrerequisite>6</constructionSkillPrerequisite>
    <placeWorkers>
      <li>PlaceWorker_PreventInteractionSpotOverlap</li>
    </placeWorkers>
    <researchPrerequisites>
      <li>Fabrication</li>
    </researchPrerequisites>
  </ThingDef>
</Defs>